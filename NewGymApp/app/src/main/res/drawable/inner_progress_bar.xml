<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
   <item android:id="@+id/inner_progress_bar_item">
       <shape android:shape="ring" android:thickness="17dp"
           android:useLevel="false">
           <solid android:color="@color/main_color" />
           <stroke android:color="@color/background" android:width="2dp"></stroke>

       </shape>
   </item>
    <item android:id="@+id/progress_item">
        <shape android:shape="ring"
            android:thickness="17dp"
            android:useLevel="true">
            <solid android:color="@color/background" />
        </shape>
    </item>
</layer-list>