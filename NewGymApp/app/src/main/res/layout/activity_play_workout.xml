<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".PlayWorkout">


    <LinearLayout
        android:id="@+id/linear_layout1_play_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/back_to_home_f_play_work"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:rotation="180"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_triangle"
            android:focusable="true" />

        <TextView
            android:id="@+id/username_text_view_profile"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:text="Workout 1"
            android:textColor="@color/white"
            android:textSize="32sp" />

        <ImageView
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:rotation="180"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_triangle"
            android:focusable="false"
            android:visibility="invisible"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/inner_bar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:progressDrawable="@drawable/inner_progress_bar"
        android:rotation="-90"
        android:indeterminateOnly="false"
        app:layout_constraintBottom_toTopOf="@+id/linear_layout3_play_work"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout1_play_work"
        >
    </ProgressBar>


    <ProgressBar
        android:id="@+id/outer_bar"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:progressDrawable="@drawable/outer_progress_bar"
        android:rotation="-90"
        android:indeterminateOnly="false"
        app:layout_constraintBottom_toTopOf="@+id/linear_layout3_play_work"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout1_play_work"
        >
    </ProgressBar>

    <TextView
        android:id="@+id/textTimerWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text=""
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@id/outer_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/outer_bar" />


    <TextView
        android:id="@+id/textTimerExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:text=""
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTimerWorkout" />


    <LinearLayout
        android:id="@+id/linear_layout3_play_work"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"

        app:layout_constraintBottom_toTopOf="@+id/linear_layout2_play_work"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outer_bar">


    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear_layout2_play_work"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">



        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.2" />


<!--        <ImageView-->
<!--            style="@style/Widget.AppCompat.ActionButton"-->
<!--            android:id="@+id/play_workout"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:clickable="true"-->
<!--            android:layout_gravity="center"-->
<!--            app:srcCompat="@drawable/play_button"-->
<!--            android:focusable="true"-->
<!--            />-->
        <Button
            android:id="@+id/play_workout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLAY"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/main_color"
            android:textSize="20sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.2" />

        <Button
            android:id="@+id/stop_workout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STOP"
            android:clickable="false"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/custom_gray"
            android:textSize="20sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.2" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>