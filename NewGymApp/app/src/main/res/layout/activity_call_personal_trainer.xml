<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".CallPersonalTrainer">

    <LinearLayout
        android:id="@+id/linear_layout_1_pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_to_home_f_pt"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:rotation="180"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_triangle"
            android:focusable="true" />

        <TextView
            android:id="@+id/username_text_view_profile"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:text="Pt"
            android:textColor="@color/white"
            android:textSize="32sp" />

        <ImageView
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:visibility="invisible"
            android:rotation="180"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_triangle"
            android:focusable="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_1_pt">

       <TextView
           android:id="@+id/workers"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text=""
           android:scrollbars="vertical"
           android:textSize="16sp"
           android:textColor="@color/white"
           android:fontFamily="@font/roboto_light"
           >

       </TextView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>