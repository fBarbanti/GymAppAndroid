<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/textNumberExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:background="@drawable/custom_rounded_textview"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:textSize="15sp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="6sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/exerciseNameCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_medium"
                android:textSize="20sp"
                android:text="Exercise Name"
                android:textColorHint="@color/custom_gray"/>

            <TextView
                android:id="@+id/TimerValueCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@color/custom_gray"
                android:fontFamily="@font/roboto_regular"
                android:textSize="15sp"
                android:text="Time: 5 min"
                android:textColorHint="@color/custom_gray"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

